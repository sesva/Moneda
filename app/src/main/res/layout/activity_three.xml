<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent3"
            android:orientation="vertical"
            android:weightSum="14"
            android:id="@+id/ly"
            tools:context="com.acme.monedas.MainActivity">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/txt_guia3"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_bra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brasil_pesos"
                    android:textColor="@color/colorLetra"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txt_bra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$$"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_chi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chile_pesos"
                    android:textColor="@color/colorLetra"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txt_chi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$$"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_col"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colombia_pesos"
                    android:textColor="@color/colorLetra"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txt_col"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$$"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_usa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usa_dolar"
                    android:textColor="@color/colorLetra"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txt_usa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$$"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_jap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/japon_yen"
                    android:textColor="@color/colorLetra"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txt_jap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$$"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_china"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/china_yuan"
                    android:textColor="@color/colorLetra"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txt_china"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$$"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_mex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mexico_pesos"
                    android:textColor="@color/colorLetra"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txt_mex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$$"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_euro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/euro"
                    android:textColor="@color/colorLetra"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txt_euro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$$"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">

                <Button
                    android:id="@+id/btn_convertir"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="@string/convertir"
                    android:textColor="@color/colorLetra"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver mapa"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorLetra"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:id="@+id/btnVerMap"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

</ScrollView>
